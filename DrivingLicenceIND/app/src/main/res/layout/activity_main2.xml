<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/procedure_for_applying_online_driving_licence"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"

        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:contentDescription="@string/todo"
        android:src="@raw/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:text="1.Visit the official website of the Ministry of Road Transport and Highways, Sarathi Parivahan: https://parivahan.gov.in/parivahan/
"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="49dp"
        android:layout_height="58dp"
        android:contentDescription="TODO"
        android:src="@raw/two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        tools:ignore="ContentDescription,DuplicateIds,HardcodedText,MissingConstraints,ImageContrastCheck" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:text="2.On the homepage, click on the Driving Licensetab."
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="44dp"
        android:layout_height="58dp"
        android:contentDescription="TODO"
        android:src="@raw/three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447"
        tools:ignore="ContentDescription,DuplicateIds,HardcodedText,ImageContrastCheck,MissingConstraints" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:text="3.Upload the necessary documents, including proof of identity, proof of address, and age proof. The specific documents required may vary depending on your state, so refer to the instructions on the website.

"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="44dp"
        android:layout_height="53dp"
        android:contentDescription="TODO"
        android:src="@raw/five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834"
        tools:ignore="ContentDescription,DuplicateIds,HardcodedText,ImageContrastCheck,MissingConstraints" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:text="5.If you pass the driving test, your driving license will be processed, and you will receive it at your registered address through the mail.
"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:contentDescription="TODO"
        android:src="@raw/four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633"
        tools:ignore="ContentDescription,DuplicateIds,HardcodedText,MissingConstraints" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:text="4.Once the payment is successful, you will receive a confirmation message with an application number. Note down this number for future reference."
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693"
        tools:ignore="HardcodedText,TextSizeCheck" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnroad"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>